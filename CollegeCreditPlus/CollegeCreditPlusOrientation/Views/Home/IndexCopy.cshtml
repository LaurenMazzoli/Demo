@model CollegeCreditPlusOrientation.Models.Form

@using Recaptcha.Web.Mvc;
@using FormHelper;
@using System.Web.Mvc;

@using CollegeCreditPlusOrientation.Helpers;
@using CollegeCreditPlusOrientation.Models

@{
    ViewBag.Title = "College Credit Plus Orientation";
}


@using (Html.BeginForm())
{
    <fieldset class="displayForm">

        <h1>@ViewBag.Title</h1>

        <div class="form-line">
            <div class="form-input">@Html.RquiredFieldIndicator() fields are required</div>
        </div>

        <div class="form-line">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.SelectedEvent)</div>
            <div class="form-input">
                @Html.DropDownListFor(m => m.SelectedEvent, Model.Events, "--Select An Event--", new { @id = "eventDropDown" })
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error">@Html.ValidationMessageFor(m => m.SelectedEvent)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.FirstName)</div>
            <div class="form-input">
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { maxlength = "50" } })
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.FirstName)</div>
        </div>
        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.LastName)</div>
            <div class="form-input">
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { maxlength = "50" } })
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.LastName)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.Address)</div>
            <div class="form-input">
                @Html.EditorFor(m => m.Address, new { htmlAttributes = new { maxlength = "100" } })
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.Address)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.City)</div>
            <div class="form-input">
                @Html.EditorFor(m => m.City, new { htmlAttributes = new { maxlength = "100" } })
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.City)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.State)</div>
            <div class="form-input"> @Html.DropDownListFor(m => m.State, @Model.States, "-- Select a State --")</div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.State)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.Zipcode)</div>
            <div class="form-input">
                @Html.EditorFor(m => m.Zipcode, new { htmlAttributes = new { maxlength = "10" } })
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.Zipcode)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.PhoneNumber)</div>
            <div class="form-input">
                @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { maxlength = "12" } })
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.PhoneNumber)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.EmailAddress)</div>
            <div class="form-input">
                <div class="form-error-clearfix"></div>
                @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { maxlength = "50" } })
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.EmailAddress)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.GradYear)</div>
            <div class="form-input">
                @Html.EditorFor(m => m.GradYear, new { htmlAttributes = new { maxlength = "4" } })
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.GradYear)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.SchoolName)</div>
            <div class="form-input">@Html.EditorFor(m => m.SchoolName, new { htmlAttributes = new { maxlength = "100" } })</div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.SchoolName)</div>
        </div>

        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.TriCNumber)</div>
            <div class="form-input">@Html.EditorFor(m => m.TriCNumber, new { htmlAttributes = new { maxlength = "9" } })</div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessageFor(m => m.TriCNumber)</div>
        </div>
        <div class="form-line">
            <div class="form-label">@Html.LabelExFor(m => m.NbrAttending)</div>
            <div class="form-input">
                @Html.DropDownListFor(m => m.NbrAttending, Enumerable.Range(1, 4).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
            </div>
            <div class="form-error-clearfix"></div>
            <div class="form-error">@Html.ValidationMessageFor(m => m.NbrAttending)</div>
        </div>

        <div class="form-line">
            <div class="form-input-recaptcha">@Html.Recaptcha(theme: Recaptcha.Web.RecaptchaTheme.Clean)</div>
            <div class="form-error-clearfix"></div>
            <div class="form-error text-danger">@Html.ValidationMessage("CaptchaError")</div>
        </div>
        <div class="form-line buttons">
            <div class="form-input">
                <button id="submit" class="btn btn-primary btn-lg btnMargin" name="submitButton" type="submit" tabindex="1000">Add</button>
            </div>
        </div>

    </fieldset>
}
@section scripts {
    <script type="text/javascript">
        $('#PhoneNumber').keyup(function() {
            $(this).val($(this).val().replace(/(\d{3})\-?(\d{3})\-?(\d{4})/, '$1-$2-$3'));
        });
    </script>
}
